<Window x:Class="Library.View.Form.LeaveRequestFormView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
         xmlns:viewmodel="clr-namespace:Library.ViewModel.Form" 
        d:DataContext="{d:DesignInstance Type=viewmodel:LeaveRequestFormViewModel}"
        mc:Ignorable="d" 
        Title="Zahtev za slobodne dane" Height="360" Width="480">

    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />

        </Grid.RowDefinitions>

        <Grid>
            <TextBlock
                Grid.Row="0"
                Text="Zahtev za slobodne dane"
                Style="{StaticResource Header}" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="FirstColumn"/>
                <ColumnDefinition SharedSizeGroup="SecondColumn"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Text="Pocetni datum:"/>

            <DatePicker Grid.Column="1" 
                        SelectedDate="{Binding Date}" 
                        Margin="0,0,0,35"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="FirstColumn"/>
                <ColumnDefinition SharedSizeGroup="SecondColumn"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Text="Broj dana:" />
            <TextBox
                Grid.Column="1" Margin="0,0,0,35"
                Text="{Binding Duration}"/>
        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="FirstColumn"/>
                <ColumnDefinition SharedSizeGroup="SecondColumn"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Text="Razlog:" />
            <TextBox
                Grid.Column="1"
                Text="{Binding LeaveReason}"/>
        </Grid>

        <Grid Grid.Row="4">
            <StackPanel 
                Grid.Column="2" 
                Orientation="Horizontal" 
                Margin="0 25 0 0" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center">
                <Button Margin="10 0 10 10" Content="Potvrdi"
                        Command="{Binding SubmitLeaveRequest}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
