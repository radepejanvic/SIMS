<Window x:Class="Library.View.Form.DrugInstructionFormView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Library.View"
        xmlns:viewmodel="clr-namespace:Library.ViewModel.Form" 
        d:DataContext="{d:DesignInstance Type=viewmodel:DrugInstructionFormViewModel}"
        mc:Ignorable="d" 
        Title="Terapija" Height="480" Width="480">

    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />
        </Grid.RowDefinitions>

        <Grid>
            <TextBlock
                Grid.Row="0"
                Text="Terapija"
                Style="{StaticResource Header}" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="FirstColumn"/>
                <ColumnDefinition SharedSizeGroup="SecondColumn"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Text="Lek: "
                Margin="0 0 15 0"/>
            <ComboBox 
                Grid.Column="1"
                ItemsSource="{Binding Drugs}" 
                SelectedItem="{Binding SelectedDrug, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                DisplayMemberPath="Name"
                IsEnabled ="{Binding IsPersciption}"
                Margin="0,0,0,24" />
        </Grid>
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="FirstColumn"/>
                <ColumnDefinition SharedSizeGroup="SecondColumn"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Text="Nacin na koji se pije lek: "
                Margin="0 0 15 0"/>
            <ComboBox 
                Grid.Column="1"
                ItemsSource="{Binding MedicationIntakeTimes}" 
                SelectedItem="{Binding SelectedMedicationIntakeTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                Margin="0,0,0,24" />
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="FirstColumn"/>
                <ColumnDefinition SharedSizeGroup="SecondColumn"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Text="Koliko puta dnevno:" />
            <TextBox
                Grid.Column="1" Margin="0,0,0,28"
                Text="{Binding TimesPerDay}"/>
        </Grid>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="FirstColumn"/>
                <ColumnDefinition SharedSizeGroup="SecondColumn"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Text="Kolicina po dozi:" />
            <TextBox
                Grid.Column="1"
                Text="{Binding AmountPerDose}"
                Margin="0,0,0,28"/>
        </Grid>

        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="FirstColumn"/>
                <ColumnDefinition SharedSizeGroup="SecondColumn"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Text="Koliko dana traje terapija:" />
            <TextBox
                Grid.Column="1"
                Text="{Binding TherapyDuration}"
                Margin="0,0,0,28"/>
        </Grid>
        
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="FirstColumn"/>
                <ColumnDefinition SharedSizeGroup="SecondColumn"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Text="Dodatni komentari:" />
            <TextBox
                Grid.Column="1"
                Text="{Binding AdditionalComments}"
                Margin="0,0,0,28"/>
        </Grid>
        <Grid Grid.Row="7">
            <StackPanel 
                Grid.Column="2" 
                Orientation="Horizontal"  
                HorizontalAlignment="Right" 
                VerticalAlignment="Center">
                <Button Content="Potvrdi"
                        Margin="10 0 10 0"
                        Command="{Binding CreatePerscription}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
