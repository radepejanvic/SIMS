<Window x:Class="Library.View.Form.DoctorRefferalFormView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Library.View"
        xmlns:viewmodel="clr-namespace:Library.ViewModel.Form" 
        d:DataContext="{d:DesignInstance Type=viewmodel:DoctorRefferalFormViewModel}"
        mc:Ignorable="d" 
        Title="Uput za doktora" Height="360" Width="480">

    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />
        </Grid.RowDefinitions>

        <Grid>
            <TextBlock
                Grid.Row="0"
                Text="Uput za doktora"
                Style="{StaticResource Header}" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="FirstColumn"/>
                <ColumnDefinition SharedSizeGroup="SecondColumn"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Text="Odabir vrste uputa:"/>
            <StackPanel Margin="10" Grid.Column="1" Orientation="Horizontal">
                <RadioButton 
                    Content="Doktor" 
                    GroupName="Options" 
                    Margin="0,0,30,0" 
                    IsChecked="{Binding IsSpecificDoctorSelected}"/>
                <RadioButton 
                    Content="Specijalista" 
                    GroupName="Options"
                    IsChecked="{Binding IsSpecificSpecializationSelected}"/>
            </StackPanel>
        </Grid>
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="FirstColumn"/>
                <ColumnDefinition SharedSizeGroup="SecondColumn"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Text="Doktor: "
                Margin="0 0 15 0"/>
            <ComboBox 
                Grid.Column="1"
                ItemsSource="{Binding Doctors}" 
                SelectedItem="{Binding SelectedDoctor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                DisplayMemberPath="FullName"
                IsEnabled="{Binding IsSpecificDoctorSelected}"
                Margin="0,0,0,24" />
        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="FirstColumn"/>
                <ColumnDefinition SharedSizeGroup="SecondColumn"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Text="Specijalizacija: "
                Margin="0 0 15 0"/>
            <ComboBox 
                Grid.Column="1"
                ItemsSource="{Binding Specializations}" 
                SelectedItem="{Binding SelectedSpecialization, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                IsEnabled="{Binding IsSpecificSpecializationSelected}"
                Margin="0,0,0,24" />
        </Grid>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="FirstColumn"/>
                <ColumnDefinition SharedSizeGroup="SecondColumn"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Text="Vrsta pregleda:"/>
            <StackPanel Margin="10" Grid.Column="1" Orientation="Horizontal">
                <RadioButton 
                    Content="Operacija" 
                    GroupName="OptionsAppointment" 
                    Margin="0,0,30,0" 
                    IsChecked="{Binding IsOperationSelected}"/>
                <RadioButton 
                    Content="Pregled" 
                    GroupName="OptionsAppointment"
                    IsChecked="{Binding IsAppointmentSelected}"/>
            </StackPanel>
        </Grid>
        
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="FirstColumn"/>
                <ColumnDefinition SharedSizeGroup="SecondColumn"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Text="Trajanje operacije:" />
            <TextBox
                Grid.Column="1" Margin="0,0,0,24"
                Text="{Binding Duration}"
                IsEnabled="{Binding IsOperationSelected}"/>
        </Grid>

        <Grid Grid.Row="6">
            <StackPanel 
                Grid.Column="2" 
                Orientation="Horizontal"  
                HorizontalAlignment="Right" 
                VerticalAlignment="Center">
                <Button Content="Potvrdi"
                        Margin="10 0 10 0"
                        Command="{Binding CreateDoctorRefferal}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
