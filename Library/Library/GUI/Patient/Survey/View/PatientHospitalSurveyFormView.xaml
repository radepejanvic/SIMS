<Window x:Class="Library.View.Form.Survey.PatientHospitalSurveyFormView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.View.Form.Survey"
        mc:Ignorable="d"
        Title="PatientHospitalSurveyFormView" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>


        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                FontSize="24"
                Text="Anketa o bolnici"
                Style="{StaticResource Header}" Margin="0,10,0,0" VerticalAlignment="Top"/>
        </Grid>

        <Grid Grid.Row="1" Margin="20 20 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                FontSize="14"
                Text="Kvalitet usluge: "
                 Margin="0,0,0,0" VerticalAlignment="Top"/>
            <Slider Grid.Column="1" Minimum="1" Maximum="5" Value="{Binding ServiceQualityRating}" TickFrequency="1" IsSnapToTickEnabled="True" Margin="10 00 0 0" />
            <TextBlock Grid.Column="2" Text="{Binding ServiceQualityRating}" Margin="20 0 0 0" />


        </Grid>

        <Grid Grid.Row="2" Margin="20 20 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                FontSize="14"
                Text="Čistoća: "
                 Margin="0,0,0,0" VerticalAlignment="Top"/>
            <Slider Grid.Column="1" Minimum="1" Maximum="5" Value="{Binding HygieneRating}" TickFrequency="1" IsSnapToTickEnabled="True" Margin="10 0 0 0" />
            <TextBlock Grid.Column="2" Text="{Binding HygieneRating}" Margin="20 0 0 0" />
        </Grid>
        
        <Grid Grid.Row="3" Margin="20 20 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
            Grid.Column="0"
            FontSize="14"
            Text="Preporuka: "
                Margin="0,0,0,0" VerticalAlignment="Top"/>
            <Slider Grid.Column="1" Minimum="1" Maximum="5" Value="{Binding RecommendationRating}" TickFrequency="1" IsSnapToTickEnabled="True" Margin="10 00 0 0" />
            <TextBlock Grid.Column="2" Text="{Binding RecommendationRating}" Margin="20 0 0 0" />

        </Grid>
        
        <Grid Grid.Row="4" Margin="20 20 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                FontSize="14"
                Text="Generalno zadovoljstvo: "
                 Margin="0,0,0,0" VerticalAlignment="Top"/>
            <Slider Grid.Column="1" Minimum="1" Maximum="5" Value="{Binding GeneralRating}" TickFrequency="1" IsSnapToTickEnabled="True" Margin="10 0 0 0" />
            <TextBlock Grid.Column="2" Text="{Binding GeneralRating}" Margin="20 0 0 0" />

        </Grid>

        <Grid Grid.Row="5" Margin="20 10 10 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBlock 
                Grid.Column="1"
                FontSize="14"
                Margin="20 0 0 0"
                Text="Komentar:"
                VerticalAlignment="Center"
                />

            <TextBox Grid.Column="1" 
                Text="{Binding GeneralComment, UpdateSourceTrigger=PropertyChanged}"  
                Margin="147,18,-87,18"
                Height="100"
                Width="200"
                TextWrapping="Wrap"
                AcceptsReturn="True"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Auto" RenderTransformOrigin="0.652,0.493"/>
        </Grid>

        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Button 
                Grid.Column="0"
                Margin="50 30 10 10"
                Padding="7"
                Content="Sacuvaj"
                Background="#fff"
                Command="{Binding AddSurveyCommand}"
               />
            <Button 
                Grid.Column="1"
                Margin="60 30 10 10"
                Padding="7"
                Content="Izadji"
                Background="#fff"
                Command="{Binding CloseCommand}"
                CommandParameter="{Binding ElementName=myWindow}"
                />
        </Grid>
    </Grid>
</Window>
