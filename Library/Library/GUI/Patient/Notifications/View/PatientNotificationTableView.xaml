<Window x:Class="Library.View.Table.PatientNotificationTableView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.View.Table"
        xmlns:table ="clr-namespace:Library.ViewModel.Table"
        d:DataContext="{d:DesignInstance Type=table:PatientNotificationTableViewModel}"
        mc:Ignorable="d"
        Title="PatientNotificationTableView" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Column="0"
                FontSize="24"
                Text="Notifikacije"
                Style="{StaticResource Header}"/>
        </Grid>

        <DataGrid Grid.Row="1" Margin="30 25 30 0"
              ItemsSource="{Binding Notifications}"
              SelectedItem="{Binding SelectedNotification}"
              CanUserSortColumns="True"
              AutoGenerateColumns="False"
              ColumnWidth="*"
              Width="auto"
              x:Name="DataGrid">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Datum i vreme" Binding="{Binding Date}"  SortMemberPath="Date"/>
                <DataGridTextColumn Header="Poruka notifikacije" Binding="{Binding Message}"  SortMemberPath="Message" />
                <DataGridTextColumn Header="Status" Binding="{Binding IsDisabled}"  SortMemberPath="IsDisabled"/>
            </DataGrid.Columns>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </DataGrid.RowStyle>

        </DataGrid>
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Button 
                Grid.Column="0"
                Margin="80 5 5 5"
                Padding="10"
                Height="40"
                Content="Promeni vreme notifikacije"
                Background="#fff"
                Command="{Binding OpenUpdateNotificationConfigurationViewCommand}"/>
            <Button 
                Grid.Column="1"
                Margin="150 10 0 10"
                Padding="12 5 12 5"
                Height="40"
                Content="Dodaj"
                Background="#fff"
                Command="{Binding OpenAddNotificationCommand}"/>
            <Button 
                Grid.Column="2"
                Margin="20 5 5 5"
                Padding="10"
                Height="40"
                Content="Promeni status"
                Background="#fff"
                Command="{Binding UpdateStatusCommand}"/>
            
            <Button 
                Grid.Column="3"
                Margin="150 5 5 5"
                Padding="10"
                Height="40"
                Content="Izadji"
                Background="#fff"
                Command="{Binding CloseCommand}"/>
        </Grid>
    </Grid>
</Window>
