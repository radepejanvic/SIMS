<Window x:Class="Library.View.Form.Notifications.PatientUpdateNotificationConfigurationFormView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.View.Form.Notifications"
        mc:Ignorable="d"
        Title="PatientUpdateNotificationConfigurationFormView" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Column="0"
                FontSize="24"
                Text="Konfiguracija vremena notifikacije"
                Style="{StaticResource Header}"/>
        </Grid>

        <Grid Grid.Row="1" Margin="20 10 10 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBlock 
                Grid.Column="1"
                FontSize="14"
                Margin="20 0 0 0"
                Text="Vase vreme notifikacije:"
                VerticalAlignment="Center"
                />

            <TextBox Grid.Column="1" 
                Text="{Binding Time, UpdateSourceTrigger=PropertyChanged}"  
                Margin="185,18,-125,18"
                    />
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Button 
                Grid.Column="0"
                Margin="50 30 10 10"
                Padding="7"
                Content="Izmeni"
                Background="#fff"
                Command="{Binding UpdateNotificationConfigurationCommand}"
               />
            <Button 
                Grid.Column="1"
                Margin="60 30 10 10"
                Padding="7"
                Content="Izadji"
                Background="#fff"
                Command="{Binding CloseCommand}"
                CommandParameter="{Binding ElementName=myWindow}"
                />
        </Grid>
    </Grid>
</Window>
