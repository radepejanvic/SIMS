<Window x:Class="Library.View.Table.PatientDoctorSearchTableView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.View.Table"
        xmlns:table="clr-namespace:Library.ViewModel.Table"
        d:DataContext="{d:DesignInstance Type=table:PatientDoctorSearchTableViewModel}"
        mc:Ignorable="d"
        Title="PatientDoctorSearchTableView" Height="450" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Column="0"
                FontSize="24"
                Text="Doktori"
                Style="{StaticResource Header}"/>
        </Grid>

        <DataGrid Grid.Row="1" Margin="30 25 30 0"
              ItemsSource="{Binding Doctors}"
              SelectedItem="{Binding SelectedDoctor}"
              CanUserSortColumns="True"
              AutoGenerateColumns="False"
              ColumnWidth="*"
              Width="auto">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Doktor" Binding="{Binding FullName}"  SortMemberPath="FullName"/>
                <DataGridTextColumn Header="Specijalizacija" Binding="{Binding Specialization}"  SortMemberPath="Specialization" />
                <DataGridTextColumn Header="Prosecna ocena" Binding="{Binding AverageReview}"  SortMemberPath="AverageReview"/>
            </DataGrid.Columns>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </DataGrid.RowStyle>

        </DataGrid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Button 
                Grid.Column="0"
                Margin="30 10 0 10"
                Padding="3"
                Height="40"
                Content="Zakazi pregled"
                Background="#fff"
                Command="{Binding OpenCreateAppointmentCommand}"/>
            <TextBlock 
                Grid.Column="1"
                FontSize="18"
                Margin="50 0 0 0"
                Text="Pretraga:"
                VerticalAlignment="Center"
                />
            <TextBox Grid.Column="2" Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}" Width="120" Margin="5 18 10 18"/>

            <Button 
                Grid.Column="3"
                Margin="80 5 5 5"
                Padding="10"
                Height="40"
                Content="Izadji"
                Background="#fff"
                Command="{Binding CloseCommand}"/>
        </Grid>

    </Grid>
</Window>
