<Window x:Class="Library.View.Form.Checkup.PatientCheckupFormView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.View.Form.Checkup"
        xmlns:viewmodel="clr-namespace:Library.ViewModel.Form.Checkup" d:DataContext="{d:DesignInstance Type=viewmodel:PatientCheckupFormViewModel}"
        mc:Ignorable="d"
        Title="PatientCheckupFormView" Height="480" Width="300">
    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock
                Grid.ColumnSpan="2"
                Text="Vizita"
                Margin="10"
                Style="{StaticResource Header}" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Text="Datum vizite"
            Style="{StaticResource Standard}"/>
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Text="{Binding DateOfCheckup}"
            Style="{StaticResource Standard}"/>

        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Text="Doba dana"
            Style="{StaticResource Standard}"/>
        <ComboBox 
            Grid.Row="2"
            Grid.Column="1"
            ItemsSource="{Binding TimesOfDay}" 
            SelectedItem="{Binding TimeOfCheckup, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
            Height="25"
            Width="120"
            Style="{StaticResource Standard}"/>

        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Text="Sistolni pritisak"
            Style="{StaticResource Standard}"/>
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Height="25"
            Width="120"
            Style="{StaticResource Standard}"
            Text="{Binding SystolicPressure}"/>

        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Text="Dijastolni pritisak"
            Style="{StaticResource Standard}"/>
        <TextBox
            Grid.Row="4"
            Grid.Column="1"
            Height="25"
            Width="120"
            Style="{StaticResource Standard}"
            Text="{Binding DiastolicPressure}"/>

        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Text="Temperatura"
            Style="{StaticResource Standard}"/>
        <TextBox
            Grid.Row="5"
            Grid.Column="1"
            Height="25"
            Width="120"
            Style="{StaticResource Standard}"
            Text="{Binding Temperature}"/>

        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Text="Zapažanja"
            Style="{StaticResource Standard}"/>
        <TextBox
            Grid.Row="6"
            Grid.Column="1"
            Height="120"
            Width="150"
            Style="{StaticResource Standard}"
            Text="{Binding Observations}"/>

        <StackPanel Grid.Row ="7" Grid.Column="1" Orientation="Horizontal" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Content="Dodaj" Command="{Binding SubmitPatientCheckup}"/>
        </StackPanel>

    </Grid>
</Window>
