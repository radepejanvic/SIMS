<Window x:Class="Library.View.Table.RefferalTableView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.View.Table" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:viewmodel="clr-namespace:Library.ViewModel.Table" d:DataContext="{d:DesignInstance Type=viewmodel:NurseRefferalTableViewModel}"
        mc:Ignorable="d"
        Title="RefferalTableView" Height="450" Width="800">
    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Text="Zakazivanje pregleda i bolničkog lečenja pomoću uputa"
            Margin="15"
            VerticalAlignment="Center"
            Style="{StaticResource Header}" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Text="Uputi za lekara"
            Margin="15"
            VerticalAlignment="Center"
            Style="{StaticResource SubHeader}" />

            <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Text="Uputi za bolničko lečenje"
            Margin="15"
            VerticalAlignment="Center"
            Style="{StaticResource SubHeader}" />

            <ListView Grid.Column="0" Grid.Row="1" Margin="10 0 5 0" ItemsSource="{Binding DoctorRefferals}" SelectedItem="{Binding SelectedDoctorRefferal}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem" >
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>

                        <GridViewColumn Header="ID" Width="auto">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Id}" HorizontalAlignment="Center" Padding="5"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="ID Doktora" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DoctorId}" HorizontalAlignment="Center" Padding="5"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Specijalizacija" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Specialization}" HorizontalAlignment="Center" Padding="5"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Trajanje">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Duration}" HorizontalAlignment="Center" Padding="5"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Vrsta" Width="160">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding IsOperation}" Foreground="Red" Width="auto" HorizontalAlignment="Center" Padding="5"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                    </GridView>
                </ListView.View>
            </ListView>

            <ListView Grid.Column="1"  Grid.Row="1" Margin="5 0 10 0" ItemsSource="{Binding HospitalRefferals}" SelectedItem="{Binding SelectedHospitalRefferal}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem" >
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>

                        <GridViewColumn Header="ID" Width="auto">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Id}" HorizontalAlignment="Center" Padding="5"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Trajanje" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Duration}" HorizontalAlignment="Center" Padding="5"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Dodatna Ispitivanja">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding AdditionalAnalysis}" HorizontalAlignment="Center" Padding="5"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <StackPanel Grid.Row ="2" Orientation="Horizontal" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Text="Izaberi vreme početka"
                Margin="15"
                VerticalAlignment="Center"/>
            <xctk:TimePicker 
                Grid.Column="1"
                Height="30"
                Width="120"
                Format="Custom" x:Name="fromDTP"
                FormatString="dd/MM/yyyy HH:mm"
                Text="{Binding From}" 
                StartTime="08:00"
                EndTime="20:00"/>
        </StackPanel>

        <StackPanel Grid.Row ="2" Orientation="Horizontal" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Content="Zakaži kod lekara" Margin="10 0 0 0" Command="{Binding CreateDoctorRefferalAppointment}"/>
            <Button Content="Zakaži kod specijaliste" Margin="10 0 0 0" Command="{Binding CreateSpecializationRefferalAppointment}"/>
            <Button Content="Zakaži bolničko lečenje" Margin="10 0 0 0" Command="{Binding StartHospitalTreatment}"/>
        </StackPanel>

    </Grid>
</Window>
