<Application x:Class="Library.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Library">
    <Application.Resources>

        <Style TargetType="{x:Type FrameworkElement}" x:Key="Standard">
            <!-- Set your style properties here -->
            <Setter Property="Margin" Value="10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Focusable" Value="True"/>
            <Setter Property="Background" Value="BurlyWood"/>
            <Setter Property="BorderBrush" Value="BurlyWood"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="BorderBrush" Value="BurlyWood"/>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="Header">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="SubHeader">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="TableField">
            <Setter Property="Width" Value="auto"/>
        </Style>

    </Application.Resources>
</Application>
